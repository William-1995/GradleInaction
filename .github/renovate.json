{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignees": ["William1995"],
    "baseBranches": [
      "master"
    ],
    "labels": [
      "bot::renovate",
      "type::maintenance"
    ],
    "dependencyDashboardAutoclose":true,
    "dependencyDashboardLabels": [
      "bot::renovate"
    ],
    "extends": [
      "config:recommended",
      ":prHourlyLimitNone",
      ":prConcurrentLimitNone",
      ":automergeDisabled",
      ":enableVulnerabilityAlerts"
    ],
    {
        "fileMatch": [
            "\\.gradle(\\.kts)?$",
            "(^|/)gradle\\.properties$",
            "(^|/)gradle/.+\\.toml$",
            "(^|/)buildSrc/.+\\.kt$",
            "\\.versions\\.toml$",
            "(^|/)versions.props$",
            "(^|/)versions.lock$"
        ]
    }
  }
